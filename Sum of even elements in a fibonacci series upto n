// Sum of even elements in a fibonacci series upto n

#include<iostream>

int main(){
    std::cout<<"Enter the number of test cases: ";
    int t;
    std::cin>>t;
    while(t!=0){
        int n;
        do{
            std::cout<<"Enter a valid term: ";
            std::cin>>n;
            std::cin.clear();
            fflush(stdin);
        }while(n<0);
        long long int t1=-1,t2=1,t3=0,sum=0;
        while(t1+t2<=n){
            t3=t1+t2;
            t1=t2;
            t2=t3;
            if(t3%2==0){
                sum+=t3;
            }
        }
        std::cout<<sum<<'\n';
        t--;
    }
}
